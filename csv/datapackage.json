  "views": [
    {
      "title": "Titles of textual works",
      "resources": {
        "name": "view1a",
        "data": {
          "url": "https://raw.githubusercontent.com/readchina/ReadAct/2.0-RC-patch/csv/views/view01a_txt-titles.csv"
        },
        "specType": "vega-lite",
        "spec": {
          "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
          "description": "Textual works by creator excluding unknowns",
          "data": {
            "url": "https://raw.githubusercontent.com/readchina/ReadAct/2.0-RC-patch/csv/views/view01a_txt-titles.csv"
          },
          "mark": {
            "type": "bar",
            "tooltip": true
          },
          "encoding": {
            "x": {
              "field": "title",
              "type": "ordinal",
              "axis": {
                "labelAngle": 0
              },
              "sort": "-y"
            },
            "y": {
              "aggregate": "count",
              "field": "act_object",
              "type": "quantitative"
            }
          }
        }
      }
    },
    {
      "title": "Titles of non-textual works",
      "resources": {
