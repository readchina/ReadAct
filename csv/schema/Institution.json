{
  "fields": [
    {
      "name": "inst_id",
      "description": "Agent.agent_id",
      "type": "string",
      "constraints": {
        "required": true,
        "unique": false,
        "maxLength": 6,
        "pattern": "^AG[0-9]{4}"
      }
    },
    {
      "name": "inst_name",
      "description": "Name of institution",
      "type": "string",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "language",
      "description": "The language of the institution name (ISO 639-1)",
      "type": "string",
      "constraints": {
        "required": true,
        "pattern": "[a-z]{2}"
      }
    },
    {
      "name": "place",
      "description": "The place where the institution is located at the time of founding",
      "type": "string",
      "constraints": {
        "required": false,
        "pattern": "^SP[0-9]{4}"
      }
    },
    {
      "name": "start",
      "description": "The date of founding",
      "type": "string",
      "constraints": {
        "required": false,
        "minLength": 4
      }
    },
    {
      "name": "end",
      "description": "The date of dissolution",
      "type": "string",
      "constraints": {
        "required": false,
        "minLength": 4
      }
    },
    {
      "name": "alt_start",
      "description": "The alternative date of founding for discontinuous histories, renaming etc.",
      "type": "string",
      "constraints": {
        "required": false,
        "minLength": 4
      }
    },
    {
      "name": "alt_end",
      "description": "The alternative date of dissolution for discontinuous histories, renaming etc.",
      "type": "string",
      "constraints": {
        "required": false,
        "minLength": 4
      }
    },
    {
      "name": "inst_alt_name",
      "description": "The alternative name of the institution",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "wikidata_id",
      "description": "The Wikidata ID of the institution",
      "type": "string",
      "constraints": {
        "required": false,
        "pattern": "^(Q[0-9]+)*"
      }
    },
    {
      "name": "source",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "page",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "note",
      "description": "structural entry for internal notes",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "created",
      "description": "structural entry creation date of entry",
      "type": "date",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "created_by",
      "description": "structural entry acronym of project member creating entry",
      "type": "string",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}|ReadActor"
      }
    },
    {
      "name": "last_modified",
      "description": "structural entry last modification date",
      "type": "date",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "last_modified_by",
      "description": "structural entry acronym of project member last modifying entry",
      "type": "string",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}|ReadActor"
      }
    }
  ],
  "primaryKey": [
    "inst_id",
    "inst_name"
  ],
  "missingValues": [
    ""
  ],
  "foreignKeys": [
    {
      "fields": "inst_id",
      "reference": {
        "resource": "agent",
        "fields": "agent_id"
      }
    },
    {
      "fields": "place",
