{
  "fields": [{
      "name": "work_id",
      "description": "W and a four-digit number (leading zeros)",
      "constraints": {
        "required": true,
        "unique": true,
        "max-length": 5,
        "pattern": "W[0-9]{4}"
      }
    },
    {
      "name": "old_id",
      "description": "id from previous id schema",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "creator",
      "description": "author, artist, director, etc.",
      "constraints": {
        "required": true,
        "pattern": "AG[0-9]{4}"
      }
    },
    {
      "name": "type",
      "description": "SS or PS or AW",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "type_num",
      "description": "integer on table",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "language",
      "description": "structural entry for key resolution",
      "constraints": {
        "required": true,
        "min-length": 2
      }
    }, {
      "name": "commentary",
      "description": "free form commentary on the work",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "note",
      "description": "structural entry for internal notes",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "created",
      "description": "structural entry creation date of entry",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "created_by",
      "description": "structural entry acronym of project member creating entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    },
    {
      "name": "last_modified",
      "description": "structural entry last modification date",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "last_modified_by",
      "description": "structural entry acronym of project member last modifying entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    }
  ],
  "primaryKey": "work_id",
  "missingValues": ["", "NULL"],
  "foreignKeys": [
    {
      "fields": "creator",
      "reference": {
        "resource": "agent",
        "fields": "agent_id"
      }
    },
    {
      "fields": "language",
      "reference": {
        "resource": "iso-lang-code",
        "fields": "iso_code"
      }
    }
  ]
}
