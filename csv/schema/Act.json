{
  "fields": [{
      "name": "act_id",
      "description": "A and a five-digit number (leading zeros)",
      "constraints": {
        "required": true,
        "unique": true,
        "max-length": 6,
        "pattern": "A[0-9]{5}"
      }
    },
    {
      "name": "agent",
      "description": "The subject reading something",
      "constraints": {
        "required": true,
        "pattern": "AG[0-9]{4}"
      }
    },
    {
      "name": "action",
      "description": "The verb describing the type of reading",
      "constraints": {
        "required": true,
        "pattern": "AT[0-9]{2}"
      }
    },
    {
      "name": "act_object",
      "description": "The object read by the subject",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "act_target",
      "description": "Transitive subject (B), as in A reads book to B",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "start",
      "description": "Year in EDTF when act begins",
      "constraints": {
        "required": false,
        "min-length": 4
      }
    },
    {
      "name": "end",
      "description": "Year in EDTF when act ends",
      "constraints": {
        "required": false,
        "min-length": 4
      }
    }, {
      "name": "discussion",
      "description": "substantial comment or quotation from source",
      "constraints": {
        "required": false
      }
    }, {
      "name": "source",
      "description": "Bibliographic evidence for act",
      "constraints": {
        "required": true
      }
    }, {
      "name": "page",
      "description": "Page range in source evidence for act",
      "constraints": {
        "required": false
      }
    }, {
      "name": "commentary",
      "description": "Commentary, esp. on underspecified reading acts",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "note",
      "description": "structural entry for internal notes",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "id_lang",
      "description": "structural entry for key resolution",
      "constraints": {
        "required": true,
        "pattern": "en"
      }
    },
    {
      "name": "created",
      "description": "structural entry creation date of entry",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "created_by",
      "description": "structural entry acronym of project member creating entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    },
    {
      "name": "last_modified",
      "description": "structural entry last modification date",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "last_modified_by",
      "description": "structural entry acronym of project member last modifying entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    }
  ],
  "primaryKey": "act_id",
  "missingValues": [""],
  "foreignKeys": [
    {
      "fields": "agent",
      "reference": {
        "resource": "Agent",
        "fields": "agent_id"
      }
    },
    {
      "fields": "action",
      "reference": {
        "resource": "ActType",
        "fields": "action_id"
      }
    },
    {
      "fields": "act_object",
      "reference": {
        "resource": "Work",
        "fields": "work_id"
      }
    },
    {
      "fields": "id_lang",
      "reference": {
        "resource": "iso-lang-code",
        "fields": "iso_code"
      }
    }
  ]
}
